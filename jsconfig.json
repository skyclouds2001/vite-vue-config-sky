{
  "$schema": "https://json.schemastore.org/jsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~": ["."],
      "~/*": ["./*"],
      "@": ["./src"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
